function plaw,t
  
  common plaw,alpha,cons,mint,norm
  
  nt=n_elements(t)
  a=dblarr(nt)
 
  if alpha eq 1 then begin
;     t0=alog(mint/max(t))
;     a=alog(t/max(t))
     a=t/max(t)
  endif else begin
;     t0=mint^(-alpha+1.)/(-alpha+1.)
     t0=1.
;     a=t^(-alpha+1.)/(-alpha+1.)
     for i=0,nt-1 do a[i]=total(t[0:i]^(-alpha))*norm
;     for i=0,nt-1 do a[i]=abs(total((t[0:i]^(-alpha+1.))/(-alpha+1.)))*norm
;     for i=0,nt-1 do a[i]=t
;     for i=0,nt-1 do a[i]=((t[i]^(-alpha+1.))/(-alpha+1.)*norm-t0)
;     a=t^(-alpha)
  endelse 
  if cons ne 0 then a=a+cons/(max(t)-mint)
;  a=a/a[n_elements(t)-1]
;  a=1.-a/(max(abs(a)))
;  a=a/a[nt-1]
;  a=abs(a)
;  a=(a-min(a))/(max(a)-min(a))
;  a=a/total(a)
;  a=a/max(a)
  
  print,a
;  print,t0

  
  return,a
  
end

