#!/usr/bin/perl## Count number of code lines#use Cwd;use File::Find;$numFiles     = 0;$numLines     = 0;$numCodeLines = 0;find (\&wanted, cwd());print "IDL Number of files      : $numFiles\n";print "IDL Number of lines      : $numLines\n";print "IDL Number of code lines : $numCodeLines\n";sub wanted {    if (/^.*\.pro$/) {       &count ($File::Find::name);    }}sub count {    my $file = $_[0];    $numFiles++;            open FILE, $file or die "Could not open file: $file, $!\n";        while (<FILE>) {                $numLines++;                next if !/[a-zA-Z]/;                        s/^\s*(.*?)\s*$/$1/;                if (! /^\;/) {           #print $_, "\n";           $numCodeLines++;        }    }        close FILE;}$numFFiles     = 0;$numFLines     = 0;$numFCodeLines = 0;find (\&wantedF, cwd());print "\n";print "FORTRAN/C Number of files      : $numFFiles\n";print "FORTRAN/C Number of lines      : $numFLines\n";print "FORTRAN/C Number of code lines : $numFCodeLines\n";sub wantedF {    if (/^.*\.c$/ || /^.*\.f$/) {       &countF ($File::Find::name);    }}sub countF {    my $file = $_[0];    $numFFiles++;            open FILE, $file or die "Could not open file: $file, $!\n";        while (<FILE>) {                $numFLines++;                next if !/[a-zA-Z]/;                        s/^\s*(.*?)\s*$/$1/;                if (! /^C/) {           #print $_, "\n";           $numFCodeLines++;        }    }        close FILE;}